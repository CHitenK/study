.copy-btn{
  display: flex;
  width: 140rpx;
  height: 50rpx;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  border-radius: 25rpx;
  background: #E60012;
  color: #ffffff;
  margin-left: 30rpx;
}
.top-box{
  width:100%;
  height:315rpx;
  background:linear-gradient(-55deg,rgba(255,78,54,1),rgba(205,0,92,1));
  border-radius: 0 0 20rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-box-item{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.16);
}
.pid-box{
  width: 635rpx;
  height: 330rpx;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top: -140rpx;
  padding-top: 90rpx;
  box-shadow:0 0 10rpx 0 rgba(0, 0, 0, 0.16);
   border-radius:20rpx;
   
}
.pid-box-I{
  color: #010101;
  font-size: 34rpx;
  text-align: center;
  width: 100%;
}
.pid-box-II{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 80rpx;
}
.pid-box-II text{
  color: #000000;
  font-size: 32rpx;
}
.pid-box-III{
  color: #8D8D8D;
  width: 100%;
  text-align: center;
  margin-top: 90rpx;
  font-size: 26rpx;
}
.top-box-item image{
  width: 80rpx;
  height: 80rpx;
}
.exit-box{
  font-size: 26rpx;
  padding: 0;
  margin: 0;
}